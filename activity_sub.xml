<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Subactivity">

    <!-- Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#193073"
        android:padding="12dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="이전 화면으로"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="지하철"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Filter Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <Button
            android:id="@+id/seoulfilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/filter_background"
            android:text="서울"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/gyeonggifilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/filter_background"
            android:text="경기"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/incheonfilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/filter_background"
            android:text="인천"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/chungcheongfilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/filter_background"
            android:text="충청"
            android:textColor="@android:color/white"
            android:textColorLink="#753D3D" />
    </LinearLayout>

    <!-- Search Bar -->
    <SearchView
        android:id="@+id/stationsearchview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/searchview_background"
        android:queryHint="역을 검색하세요"
        android:iconifiedByDefault="false"
        android:paddingHorizontal="8dp" />

    <!-- Station List -->
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#193073"
        android:dividerHeight="1dp"
        android:padding="8dp" />
</LinearLayout>


